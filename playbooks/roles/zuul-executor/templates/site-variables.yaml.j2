---
zuul_site_mirror_fqdn: {{ nexus_site }}
nexus:
  fqdn: {{ nexus_site }}
  registry:
    tungsten_ci: 5001
    tungsten_nightly: 5002
    proxy: 5005
    access: 5010
  repos:
    yum: 'yum-tungsten'
    yum_nightly: 'yum-tungsten-nightly'
    yum_tpc: 'yum-tungsten-tpc'
    maven: 'maven-public'
docker_registry:
  fqdn: {{ nexus_site }}
  port: 5000

zuul_log_url: "{{ zuul_log_url | default('http://logs.site.org:80') }}"

sanity:
  docker_registry_port: 
  control_plane_interface: ens5
  data_plane_interface: ens6
