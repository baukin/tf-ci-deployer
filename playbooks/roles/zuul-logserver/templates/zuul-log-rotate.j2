#!/bin/bash -x

logdir="{{ logserver_data_directory }}"
if [ -z "$logdir" ] ; then
  echo "ERROR: empty log dir"
  exit -1
fi

exclude_dir="$logdir/static*"

find $logdir -type f ! -path "$exclude_dir" -ctime +30 -execdir rm -f {} \;
find $logdir -type d ! -path "$exclude_dir" -ctime +30 -empty -delete
