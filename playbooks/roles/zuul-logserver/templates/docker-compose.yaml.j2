# Version 2 is the latest that is supported by docker-compose in
# Ubuntu Xenial.
version: '2'

services:
  logs:
    image: httpd:alpine
    restart: always
    ports:
      - "{{ zuul_logs_port }}:80"
    volumes:
      - "{{ logserver_data_directory }}:/usr/local/apache2/htdocs"
      - "./httpd.conf:/usr/local/apache2/conf/httpd.conf"
      - "/var/log/zuul:/var/log/zuul"
