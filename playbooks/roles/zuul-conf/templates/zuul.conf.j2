[gearman]
server={{ zuul_scheduler_host }}
check_job_registration=true

[gearman_server]
start=true
log_config=/etc/zuul/gearman-logging.conf

[zookeeper]
hosts={{ zookeeper_host }}

[web]
log_config=/etc/zuul/web-logging.conf
listen_address=0.0.0.0
listen_port=9000

[merger]
git_dir=/var/lib/zuul/git
zuul_url=
log_config=/etc/zuul/merger-logging.conf
git_user_email=zuul@opencontrail.org
git_user_name=OpenContrail Zuul

[executor]
log_config=/etc/zuul/executor-logging.conf
private_key_file=/var/ssh/nodepool_rsa
job_dir=/var/lib/zuul/builds
default_username=zuul
disk_limit_per_job=4096
variables=/etc/zuul/site-variables.yaml
hostname={{ ansible_ssh_host }}
user=zuul
trusted_ro_dirs=
trusted_rw_dirs=
untrusted_ro_dirs=
untrusted_rw_dirs=
trusted_ro_paths=/etc/ssl/certs:/var/ssh:/etc/zuul/nexus_creds
trusted_rw_paths=/srv/static/logs
untrusted_ro_paths=/etc/ssl/certs
untrusted_rw_paths=
finger_port=7900

[scheduler]
tenant_config=/etc/zuul/main.yaml
log_config=/etc/zuul/scheduler-logging.conf
state_dir=/var/lib/zuul

[connection "github"]
driver=github
webhook_token=

[connection "gerrit"]
name=gerrit
driver=gerrit
server={{ gerrit_host }}
sshkey=/var/ssh/zuul_rsa
user={{ gerrit_user }}
baseurl={{ gerrit_scheme }}://{{ gerrit_host }}

[connection "mysql"]
name={{ mysql_host }}
driver=sql
dburi=mysql+pymysql://{{ zuul_mysql_username }}:{{ zuul_mysql_password }}@{{ mysql_host }}/{{ zuul_mysql_db_main }}
